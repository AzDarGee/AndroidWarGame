<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
    
    <!-- The main content view -->
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
 
 	<TextView
 	    android:id="@+id/opponentName"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:text="OPPONENT NAME"
 	    android:textColor="@android:color/white"
 	    android:gravity="right"
 	    android:textSize="18dp" />

 	<ImageView
 	    android:id="@+id/imageView1"
 	    android:layout_width="140dp"
 	    android:layout_height="140dp"
 	    android:layout_below="@+id/opponentName"
 	    android:gravity="right"
 	    android:src="@drawable/char2" />
 	
 	<TextView
 	    android:id="@+id/opponentHealth"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/imageView1"
 	    android:gravity="right"
 	    android:text="Health"
 	    android:textColor="@android:color/white"
 	    android:textSize="15dp" />

 	<ProgressBar
 	    android:id="@+id/progressBar1"
 	    style="?android:attr/progressBarStyleHorizontal"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/opponentHealth"
 	    android:max="100"
 	    android:progress="60"
 	    android:progressDrawable="@drawable/green_health" />

 	<ImageView
 	    android:id="@+id/imageView2"
 	    android:layout_width="140dp"
 	    android:layout_height="140dp"
 	    android:layout_below="@+id/progressBar1"
 	    android:layout_marginTop="40dp"
 	    android:gravity="left"
 	    android:src="@drawable/char2" />

 	<ProgressBar
 	    android:id="@+id/progressBar2"
 	    style="?android:attr/progressBarStyleHorizontal"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/imageView2"
 	    android:max="100"
 	    android:progress="90"
 	    android:progressDrawable="@drawable/green_health" />
 	
 	<TextView
 	    android:id="@+id/playerHealth"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/progressBar2"
 	    android:layout_centerHorizontal="true"
 	    android:textColor="@android:color/white"
 	    android:text="HEALTH/MANA: " />
 	
 	<TextView
 	    android:id="@+id/playerExperience"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/playerHealth"
 	    android:layout_centerHorizontal="true"
 	    android:textColor="@android:color/white"
 	    android:text="Experience: " />

 	<Button
 	    android:id="@+id/endTurnButton"
 	    style="?android:attr/buttonStyleSmall"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_alignLeft="@+id/playerExperience"
 	    android:layout_below="@+id/playerExperience"
 	    android:onClick="endTurn"
 	    android:text="End Turn" />

    </RelativeLayout>
    
    <!-- The navigation drawer -->
    <ExpandableListView
        android:id="@+id/drawer_list"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/white"
        android:dividerHeight="1dp"
        android:background="@color/grey"
        android:childDivider="@android:color/transparent"
        android:groupIndicator="@drawable/settings_selector"
         >
    </ExpandableListView>
    
</android.support.v4.widget.DrawerLayout>



